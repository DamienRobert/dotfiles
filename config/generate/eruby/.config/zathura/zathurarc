#WHEN !@computer[:xorg].empty?
#Generated @<%= `date --iso-8601=seconds`.chomp %>
<%
case @computer.name
when "Feanor"
  @width=1010
  @height=1025
when "Valinor"
  @width=800
  @height=840
else
  @width=@computer[:xorg][:whoriz]
  @height=@computer[:xorg][:wvert]
end
%>

set window-width <%= @width %>
set window-height <%= @height %>
set adjust-open width
#set pages-per-row 2
map BackSpace scroll up
