#!/bin/zsh
# Launch 00updatecompte on computers

MYFILES=${MYFILES-$HOME/config}
#. "$MYFILES/00COMPUTERS"
COMPUTERS=(imb phare 4a bbq mygale)
CFGFILES=${MYFILES#$HOME/}

for comp in $COMPUTERS; do
  eval $($MYFILES/00COMPUTERS.rb --export $comp)
  echo "-- $comp --"
  ssh2 $SSHUNISON cat $CFGFILES/hosttype.local
done
echo "Update config files? (Press a key to continue)"
read a

for comp in $COMPUTERS; do
  info_computer $comp
  echo "-- $comp --"
  ssh2 $SSHUNISON $CFGFILES/new/00updatecompte
done
