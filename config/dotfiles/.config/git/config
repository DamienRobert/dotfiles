[alias]
	co = checkout
	ch = cherry
	pi = cherry-pick
	ci = commit
	cl = clone
	mg = merge
	mt = mergetool
	st = status --short --branch
	s = status --short --branch
	sl = shortlog
	br = branch -vv
	sb = show-branch 
	ls = ls-files
	rb = rebase
	rs = reset
	di = diff
	dc = diff --staged
	ds = diff --stat
	dw = diff --word-diff
	dcw = diff --staged --word-diff
	ci-a = commit --amend
	mg-a = merge --abort
	rb-a = rebase --abort
	rb-c = rebase --continue
	rb-s = rebase --skip
	rb-i = rebase --interactive
	pi-a = cherry-pick --abort
	pi-c = cherry-pick --continue
	pi-q = cherry-pick --quit
	rs-s = reset --soft
	rs-m = reset --merge
	rs-k = reset --keep

	l  = log --decorate
	current = "!git --no-pager log --decorate --oneline --no-walk"
	la  = log --decorate --all
	l1 = log --decorate --no-walk --stat --dirstat
	ll = log --decorate --name-status
	lla = log --decorate --name-status --all
	lls = log --decorate --stat
	llf = log --decorate --name-status --pretty=fuller
	lg  = log --oneline --decorate --graph --date-order
	lt  = log --oneline --decorate --graph --topo-order
	lgm  = log --pretty=sumdate --decorate --graph --date-order --date=iso
	ltm  = log --pretty=sumdate --decorate --graph --topo-order --date=iso
	lga  = log --pretty=summary --decorate --graph --date-order --date=relative --all
	lta  = log --pretty=summary --decorate --graph --topo-order --date=relative --all
	lsquel  = log --pretty=sumdate --decorate --graph --topo-order --date=relative --all --simplify-by-decoration
	news = log -p HEAD@{1}..HEAD@{0}

	ls-ignored = ls-files --exclude-standard --ignored --others -s
	rmdeleted = ! git ls-files -z --deleted | xargs -0 git rm
	skip = update-index --skip-worktree
	unskip = update-index --no-skip-worktree
	skipped = "!git ls-files -v | grep ^S | cut -c 3-"
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"

	meld = difftool -y -t meld
	vimdiff = difftool -y -t gvimdiff
	mergemeld = mergetool -y -t meld #gitmerge
	mergevim = mergetool -y -t gvimdiff
	ack = -c color.grep.filename='bold green' -c color.grep.match='black yellow' grep --break --heading -n

	noteslog = !sh -c 'git log $(git notes get-ref) "$@"' -
	wsadd = "!sh -c 'git diff -- \"$@\" | git apply --cached --whitespace=fix;\
          git checkout -- ${1-.} \"$@\"' -"
