#vim: ft=sh
############# Geometry, set in .Xresources-generate
#i need to set the variables here since they are also used to set the size of gnome-term
HORIZ=80
FONTTYPE=Monospace

VERT=34; SVERT=22; GNOMEVERT=28
FONTSIZE=13; SFONTSIZE=9

case "$MYHOSTNAME" in
  Numenor )
  VERT=31; SVERT=22; GNOMEVERT=30;
;;
  Feanor )
  FONTSIZE=15
  VERT=50; SVERT=22; GNOMEVERT=49;
;;
  Durin )
  FONTSIZE=18
;;
  Valinor )
  VERT=44; SVERT=22; GNOMEVERT=42;
  FONTSIZE=14; 
;;
  Gondolin )
  VERT=38; 
;;
  FleurBleue )
  GNOMEVERT=38; VERT=39
;;
imb )
  VERT=55; SVERT=22; GNOMEVERT=50;
  FONTSIZE=14
;;
esac

GNOMEFONTSIZE=${GNOMEFONTSIZE:-$FONTSIZE}
#export HORIZ FONTTYPE VERT SVERT GNOMEVERT FONTSIZE SFONTSIZE GNOMEFONTSIZE

FONT="${FONTTYPE}:size=${FONTSIZE}"
SFONT="${FONTTYPE}:size=${SFONTSIZE}"
XTERMG="${HORIZ}x${VERT}"
GTERMG="${HORIZ}x${GNOMEVERT}"
SXTERMG="${HORIZ}x${SVERT}"

GEODR="-0-0"
GEODL="+0-0"
GEOUR="-0+0"
GEOUL="+0+0"
