#XIM=ibus
XIM_PROGRAM=/usr/bin/ibus-daemon
XIM_ARGS="--xim"
if [ -e /usr/lib/gtk-2.0/*/immodules/im-ibus.so ]; then
    GTK_IM_MODULE=ibus
else
    GTK_IM_MODULE=xim
fi

if [ -e /usr/lib/qt4/plugins/inputmethods/libqtim-ibus.so ]; then
	QT_IM_MODULE=ibus
else
	QT_IM_MODULE=xim
fi
DEPENDS="ibus, ibus-gtk, ibus-qt4"
# vim:ft=sh:
