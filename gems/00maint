# rubygems
# ========

~maint/gems/gems.rb
# Install
gem install pkgs
eval $(./gems.rb get-all) #install all wanted pkgs

# Update
gem update
gem clean
eval $(./gems.rb get) #install missing pkgs
eval $(./gems.rb rm) #remove extra pkgs
#unfortunately needs to be run several time to remove dependency, there is
#no pacman -Rcs equivalent for gem
eval $(./gems.rb pristine) #both of the above

gem list: list gems
gem stale: list gems along with access times
gem outdated: display all gems that need updates
gem clean: remove old gems
gem uninstall: uninstall gems

#regenerate the docs:
- gem rdoc --all --rdoc
- yard gems 
-> yard server -g to launch local yard server

# python (pip)
# ===========

#install:
pip install --user #or pip2, pip3 for python2, python3
#update:
pip2 install --user $(~rubylib/dr/readconfig.rb -j ~maint/gems/pip2) -U

- pip uninstall
- pip list #list global /usr packages too

# perl (cpan)
# ===========

#curl -L http://cpanmin.us | perl - App::cpanminus
#install a module: cpanm Module
cpanm $(~rubylib/dr/readconfig.rb -j ~maint/gems/cpanm)

- cpanm --self-upgrade
- cpanm --uninstall

# nodejs (npm)
# ===========

#sudo pacman -S nodejs
npm install -g $(~rubylib/dr/readconfig.rb -j ~maint/gems/npm)
npm update -g $(~rubylib/dr/readconfig.rb -j ~maint/gems/npm)

- npm uninstall
