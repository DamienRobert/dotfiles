#!/bin/sh

DEFAULT="$MYFILES/syst/etc/local/etc-$MYHOSTNAME"
DIR=${1-$DEFAULT}
[ -d "$DIR" ] && cd $DIR

echo "Overwrite sys config files by the values in `pwd`"
echo "Are you sure? Press a key to continue"
read

( 
sudo mkdir -p /etc/polkit-1/localauthority/50-local.d
find * -type f -exec sh -c "sudo cp {} /etc/{}; sudo chown root:root /etc/{}" \;
)

( 
eval $($MYFILES/00COMPUTERS.rb --export $MYHOSTNAME)
if [ "$LAPTOP" = "xtrue" ]; then
  echo "On laptop, installing powersave"
  cd $HOME/progs/powersave && sudo make
fi
)
