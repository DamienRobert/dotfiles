#!/bin/zsh

#partitions: cfdisk, cgdisk, mkfs.btrfs...
#If needed to zap the partition: /usr/bin/sgdisk --zap ${DISK}
sgdisk -n 1:0:+100M -c '0:boot' -t '0:ef00' -u c12a7328-f81f-11d2-ba4b-00a0c93ec93b --attributes=1:set:2 \
  -n 2:0:+2G -c '0:slash' -t '0:8300' -u 4f68bce3-e8cd-4db1-96e7-fbcaf984b709 \
  -n 3:0:0 -c '0:home' -t '0:8302' -u 933ac7e1-2eb4-4f13-b844-0e14e2aef915 $DISK

  #For Efi /boot use -c '0:boot' -t ef00 -u c12a7328-f81f-11d2-ba4b-00a0c93ec93b
  #For Bios /boot use -c '0:boot' -t ef02 -u bc13c2ff-59e6-4262-a352-b275fd6f7172
  #For Swap use -c '4:swap' -t 8200 -u 0657fd6d-a4ab-43c4-84e5-0933c84b4f4f
