#MBR
####

cd ~config/syst/MBR

PARTITIONS=(/dev/sda)
## MBR
./00print_partition $PARTITIONS > "partitions-$MYHOSTNAME"
./00save_mbr $PARTITIONS
./00save_mbrgap $PARTITIONS

## GPT
./00print_partition_gpt $PARTITIONS > "partitions-$MYHOSTNAME"
./00save_gpt $PARTITIONS

# initrd initial
################

cd /boot

## grub

sudo cp vmlinuz-linux vmlinuz-linuw00
sudo cp initramfs-linux.img initramfs-linuw00.img
sudo cp initramfs-linux-fallback.img initramfs-linuw00-fallback.img

## gummiboot

sudo mkdir -p EFI/linux-init
sudo cp vmlinuz-linux initramfs-linux.img initramfs-linux-fallback.img EFI/linux-init

## subvolume
sudo btrfs subvolume snapshot / /slash-init
#modifier grub/gummiboot pour que le backup boote sur /slash-init

# ip address + blkid
############

~config/ifconfig/00savedata
