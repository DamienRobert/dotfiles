#!/bin/sh

# I have a playlist, If I call this script I want to use mpv
# mpc clear
# wget --quiet -O - http://somafm.com/indiepop.pls \
# | grep '^File1=' \
# | sed -e 's/^File1=\(.*\)$/\1/' \
# | mpc add
# mpc play 1

play() {
  mpl --audio "http://ice.somafm.com/$1"
}

[ -z "$1" ] && play indiepop

case "$1" in
	digitalis) play digitalis ;;
	groovesalad) play groovesalad ;;
	indiepop) play indiepop ;;
	lush) play lush ;;
	airwaves) play airwaves ;;
	deepspaceone) play deepspaceone ;;
	*) play "$1" ;;
esac
